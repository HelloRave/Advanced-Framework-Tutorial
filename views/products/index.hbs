{{#extends 'base'}}
{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Cost</th>
            <th>Categories</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.category.name}}</td>
            <td>
                {{#each this.tags}}
                <span>{{this.name}}</span>   
                {{/each}}
            </td>
            <td>
                <a href="/products/{{this.id}}/update">Update</a>
                <a href="/products/{{this.id}}/delete">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}
{{/extends}}